<h1>New order</h1>

<%= render 'form' %>
<%= form_for(@order) do |f| %>

<map name="Map" id="Map">
<area shape="rect" coords="2,60,86,76" href="#" />
</map>
 
 
    <!-- 拿到用户信息 -->
   
    <table><tr><td height="20"></td></tr></table>
       <table width="90%" bgColor="#DDDDDD" border="0" cellspacing="1" cellpadding="0">
         <tr bgColor="#FFFFFF">
            <td align="left" height="30">&nbsp;&nbsp;Name： </td>
            <td>&nbsp;&nbsp;<%= f.text_field :uname, :value=>"#{@tuser}" %></td>
         </tr>
         <tr bgColor="#FFFFFF" heught="30">
            <td width="100" height="30" align="left" bgcolor="#FFFFFF">&nbsp;&nbsp;Mobile：</td>
            <td>&nbsp;&nbsp;<%= f.text_field :uphone %></td>
         </tr>
         <tr bgColor="#FFFFFF" heught="30">
           <td height="30" align="left" bgcolor="#FFFFFF">&nbsp;&nbsp;Home Phone：</td>
           <td>&nbsp;
             <%= f.text_field :uhomephone %></td>
         </tr>
         <tr bgColor="#FFFFFF" heught="30">
           <td align="left" height="30">&nbsp;&nbsp;Address：</td>
           <td>&nbsp;
             <%= f.text_field :uaddress %></td>
         </tr>
         <tr bgColor="#FFFFFF" heught="30">
            <td align="left" height="30">&nbsp;&nbsp;Post code：</td>
            <td>&nbsp;&nbsp;<%= f.text_field :upost%></td>
         </tr>
       </table>
       
       <table><tr><td height="20"></td></tr></table>
 
     <table width="90%" border="0" cellpadding="0" cellspacing="1" bgcolor="#CCCCCC">
       <tr heught="30">
                  <td height="35" align="center" bgcolor="#FFF2F0">Product No.</td>
                  <td align="center" bgcolor="#FFF2F0">Name</td>
                  <td align="center" bgcolor="#FFF2F0">Price</td>
                  <td align="center" bgcolor="#FFF2F0">Qt</td>
                  <td align="center" bgcolor="#FFF2F0">Total Price</td>
       </tr>
       <!-- 拿到购物车信息 -->
       <%if @ware_cart!=nil then %>
             <% @ware_cart.each do |ware,amount|%>
                <tr height="30">
                  <td height="25" align="center" bgcolor="#FFFFFF"><%=ware.id%></td>
                  <td align="center" bgcolor="#FFFFFF"><%=ware.wname%></td>
                  <td align="center" bgcolor="#FFFFFF">$<%=ware.wprice%></td>
                  <td align="center" bgcolor="#FFFFFF"><%=amount%></td>
                  <td align="center" bgcolor="#FFFFFF">$<%=ware.wprice*amount%></td>
               </tr>
               <% end %>
               <% end %>
        
       <tr>
       <td height="30" align="center" bgcolor="#FFFFFF"></td>
       <td align="center" bgcolor="#FFFFFF"></td>
       <td align="center" bgcolor="#FFFFFF"></td>
       <td align="center" bgcolor="#FFFFFF"></td>
       <td align="center" bgcolor="#FFFFFF">Total：
      $<%= f.text_field :pirce, :size=>"5" , :value=>"#{@total}" %>
       </td>
       </tr>
</table>
       
       <table width="90%" height="40" border="0" cellpadding="0" cellspacing="0">
          <tr height="50">
             <td valign="bottom" align="right"><a href="" class="f">
                
             </a></td>
              <td width="50"></td>
             <td valign="bottom" align="center">
             
               <%= link_to 'Back', orders_path %>&nbsp;&nbsp;&nbsp;&nbsp;<%= f.submit %>
             </td>
          </tr>
</table>

    
<% end %>


